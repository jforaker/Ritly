<h2>Welcome to Ritly</h2>

<h3>Please sign in</h3>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, class: 'form-control flat', :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, class: 'form-control flat' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: 'checkbox' %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-large btn-block btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
